#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        hm: hm {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <50>;
            flavor = "balanced";
        };

        capswordus: capswordus {
            compatible = "zmk,behavior-caps-word";
            label = "CAPSWORDUS";
            #binding-cells = <0>;
            continue-list = <MINUS UNDERSCORE>;
        };

        hm_layer: hm_layer {
            compatible = "zmk,behavior-hold-tap";
            label = "HM_LAYER";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <200>;
            require-prior-idle-ms = <50>;
            flavor = "balanced";
        };
    };

    combos {
        compatible = "zmk,combos";

        cwcombo {
            bindings = <&caps_word>;
            key-positions = <16 19>;
        };

        lp {
            bindings = <&kp LEFT_PARENTHESIS>;
            key-positions = <0 11>;
        };

        lbr {
            bindings = <&kp LEFT_BRACKET>;
            key-positions = <12 23>;
        };

        lb {
            bindings = <&kp LEFT_BRACE>;
            key-positions = <24 35>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  ESC  |  Q  |  W  |  E   |  R   |  T   |                                          |  Y   |  U    |  I    |  O   |   P   |   \  |
            // |  TAB  |  A  |  S  |  D   |  F   |  G   |                                          |  H   |  J    |  K    |  L   |   ;   |   '  |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   | L SHIFT | L SHIFT |  | LAYER 1 | L SHIFT |  N   |  M    |  ,    |  .   |   /   | CTRL |
            //                     | GUI  | DEL  | RET  |  SPACE  |   ESC   |  |   RET   |  SPACE  | TAB  | BSPC  | R-ALT |

            bindings = <
&kp TAB  &kp Q  &kp W  &kp E  &kp R  &kp T  &kp Y  &kp U  &kp I  &kp O  &kp P  &kp BSLH  &kp ESC  &hm LCTRL A  &hm LALT S  &hm LGUI D  &hm LSHFT F  &hm_layer 4 G  &hm_layer 4 H  &hm RSHFT J  &hm LEFT_GUI K  &hm RALT L  &hm RCTRL SEMICOLON  &kp SQT  &kp LSHFT  &kp Z  &kp X  &kp C  &kp V  &kp B  &kp N  &kp M  &kp COMMA  &kp DOT  &kp FSLH  &kp RSHFT  &kp CAPS  &kp BSPC  &lt 5 SPACE  &lt 2 ENTER  &lt 4 ESCAPE
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
        };

        lower {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |       |      |BT_CLR|BTSEL0|BTSEL1|BTSEL2|                                         |      |      |      |      |      |      |
            // |       |      |      |BTSEL3|BTSEL4|      |                                         |      |      |      |      |      |      |
            // |       |      |      |      |      |      |      |      |      |      |      |      |      |      |      |      |      |      |
            //                       |      |      |      |      |      |      |      |      |      |      |      |      |

            bindings = <
&kp TAB  &kp LS(EXCL)  &kp LS(AT)  &kp LS(POUND)  &kp LS(DLLR)  &kp LS(PRCNT)  &kp CARET  &kp LS(AMPS)  &kp LS(STAR)  &kp MINUS  &kp EQUAL  &kp GRAVE  &trans  &hm LCTRL NUMBER_1  &hm LALT NUMBER_2  &hm LGUI NUMBER_3  &hm RSHFT NUMBER_4  &kp N5  &kp N6  &hm RSHFT N7  &hm LGUI N8  &hm RALT N9  &hm RCTRL N0  &kp SQT  &kp CAPSLOCK  &kp N1  &kp N2  &kp N3  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp F7  &kp LEFT_BRACE  &kp RIGHT_BRACE  &kp LBKT  &kp RBKT  &kp DOUBLE_QUOTES  &trans  &kp DELETE  &trans  &trans  &trans
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN &inc_dec_kp PG_UP PG_DN>;
            label = "lower";
        };

        nav {
            bindings = <
&trans  &kp RG(RS(Q))  &kp RG(E)  &kp RG(E)  &kp RG(R)  &trans  &kp LC(LA(LG(LS(N1))))  &kp LC(LA(LG(LS(N2))))  &kp LC(LA(LG(LS(N3))))  &kp LS(LC(LA(LG(N4))))  &kp LC(LA(LG(LS(N5))))  &kp LS(LC(LA(LG(N6))))  &kp LS(LC(LALT))  &kp LC(LSHFT)  &kp RG(S)  &kp RC(TAB)  &kp RG(F)  &kp RA(TAB)  &kp LC(LA(LG(LS(H))))  &kp LC(LA(LG(LS(J))))  &kp LC(LA(LG(LS(K))))  &kp LC(LA(LG(LS(L))))  &kp LC(LSHFT)  &kp LCTRL  &trans  &trans  &trans  &kp RC(RS(TAB))  &kp RG(TAB)  &kp RA(RS(TAB))  &kp LC(LA(LG(LS(LEFT))))  &kp LC(LA(LG(LS(UP_ARROW))))  &kp LC(LA(LS(DOWN_ARROW)))  &kp LC(LA(LG(LS(RIGHT))))  &kp LC(LA(LG(LS(LEFT))))  &kp RSHFT  &kp LC(LA(LG(LS(UP))))  &kp LC(LA(LG(LS(RIGHT))))  &trans  &trans  &trans
            >;

            label = "nav";
        };

        upper {
            bindings = <
&kp F1  &kp F2  &kp F3  &kp F4  &kp F5  &kp F6  &kp F7  &kp F8  &kp F9  &kp F10  &kp F11  &kp F12  &kp LEFT_BRACE  &kp RIGHT_BRACE  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp LEFT  &kp UP  &kp DOWN  &kp RIGHT  &trans  &trans  &kp RSHFT  &kp LCTRL  &kp LALT  &kp LGUI  &trans  &capswordus  &trans  &trans  &kp LGUI  &kp RALT  &kp RCTRL  &kp RSHFT  &trans  &trans  &trans  &trans  &trans
            >;

            label = "upper";
        };

        layer_4 {
            label = "upper";
            bindings = <
&trans  &trans  &trans  &kp TILDE  &kp TILDE  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &kp LEFT_BRACE  &kp RIGHT_BRACE  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp LEFT  &kp UP  &kp DOWN  &kp RIGHT  &trans  &trans  &kp RSHFT  &kp LCTRL  &kp LALT  &kp LGUI  &trans  &capswordus  &trans  &trans  &kp LGUI  &kp RALT  &kp RCTRL  &kp RSHFT  &trans  &trans  &trans  &trans  &trans
            >;
        };

        layer_5 {
            label = "lower_new";
            bindings = <
&kp TAB  &kp N7  &kp N8  &kp N9  &kp LEFT_BRACKET  &kp LS(PRCNT)  &kp CARET  &kp AMPERSAND  &kp ASTRK  &kp MINUS  &kp EQUAL  &kp GRAVE  &trans  &hm LCTRL NUMBER_4  &hm LALT N5  &hm LGUI NUMBER_6  &hm RSHFT NUMBER_4  &kp N5  &kp N6  &hm RSHFT N7  &hm LGUI N8  &hm RALT N9  &hm RCTRL N0  &kp SQT  &kp CAPSLOCK  &kp N1  &kp N2  &kp N3  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp EXCL  &kp AT_SIGN  &kp HASH  &kp DOLLAR  &kp PERCENT  &kp DOUBLE_QUOTES  &trans  &kp DELETE  &trans  &kp CAPS  &trans
            >;

            sensor-bindings =
                <&inc_dec_kp C_VOL_UP C_VOL_DN>,
                <&inc_dec_kp PG_UP PG_DN>;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";

        double {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
};
